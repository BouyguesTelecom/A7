{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "allowJs": true,
    "esModuleInterop": false,
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es2020"
    ],
    "rootDir": "./",
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "./tests/**/*.ts"
  ]
}
